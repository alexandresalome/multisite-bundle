<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="site_context" class="Alex\MultisiteBundle\Branding\SiteContext">
             <!-- injected by AlexMultisiteExtension -->
            <argument type="collection"></argument>
            <argument>%alex_multisite.default_branding%</argument>
        </service>

        <service id="site_context_listener" class="Alex\MultisiteBundle\EventListener\SiteContextListener">
            <argument type="service" id="site_context" />
            <tag name="kernel.event_listener"  method="onKernelRequest" event="kernel.request" />
        </service>
    </services>

</container>
