<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="site_context.class">Alex\MultisiteBundle\Branding\SiteContext</parameter>
    </parameters>

    <services>
        <service id="site_context" class="%site_context.class%">
             <!-- injected by AlexMultisiteExtension -->
            <argument type="collection"></argument>
            <argument>%alex_multisite.default_branding%</argument>
            <argument>%alex_multisite.default_locale%</argument>
        </service>
    </services>

</container>
